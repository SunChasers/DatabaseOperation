$(document).ready(function() {
/*左侧选择栏鼠标移动*/
	$("#r_li01").mousemove(function() {
		$("#r_li01").css("background-color", "rgb(228,228,228)");
	});
	$("#r_li01").mouseout(function() {
		$("#r_li01").css("background-color", "#FFFFFF");
	});
	$("#r_li02").mousemove(function() {
		$("#r_li02").css("background-color", "rgb(228,228,228)");
	});
	$("#r_li02").mouseout(function() {
		$("#r_li02").css("background-color", "#FFFFFF");
	});
	$("#r_li03").mousemove(function() {
		$("#r_li03").css("background-color", "rgb(228,228,228)");
	});
	$("#r_li03").mouseout(function() {
		$("#r_li03").css("background-color", "#FFFFFF");
	});
/*左侧选择栏点击事件*/
	$("#r_li01").click(function() {
		$(".r_li1").css("display", "");
		$(".r_li2").css("display", "none");
		$(".r_li3").css("display", "none");
		
	});
	$("#r_li02").click(function() {
		$(".r_li1").css("display", "none");
		$(".r_li2").css("display", "");
		$(".r_li3").css("display", "none");
	});
	$("#r_li03").click(function() {
		$(".r_li1").css("display", "none");
		$(".r_li2").css("display", "none");
		$(".r_li3").css("display", "");
	});
});